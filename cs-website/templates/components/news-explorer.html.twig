{% extends "components/section.html.twig" %}

{% block classes %}{{ parent() }} titled-section news-explorer{% endblock %}

{% block content %}
    <div class="section-content">
        <header>
            <div class="row row-1">
                <h1>News</h1>
                <span>zu</span>
                <select class="product-selector">
                    <option>CS-Transport</option>
                    <option>CS-Bus</option>
                    <option>CS-Routing</option>
                </select>
                <div class="search center-vertically-children">
                    <input type="text" placeholder="Suchen...">
                    <button><span class="fa fa-search"></span></button>
                </div>
            </div>
            <div class="row row-2">
                <button class="link-button toggle-additional-filters">Zus√§tzliche Filter</button>
                <button class="link-button reset-additional-filters"><span class="fa fa-undo"></span></button>
            </div>
            <div class="row row-3">
                <div class="additional-filters">
                    <span class="filter full-row">
                        <span class="filter-label">Versionsnummer: </span>
                        <span class="filter-label">Von </span><input class="version from" type="text"><span class="filter-label"> bis </span><input class="version to" type="text">
                    </span>
                    <span class="filter full-row">
                        <span class="filter-label">Datum: </span>
                        <span class="filter-label">Von </span><input class="date from"><span class="filter-label"> bis </span><input class="date to">
                    </span>
                </div>
            </div>
        </header>
        <ul class="news-list isolated-scroll">
        </ul> 
        <button class="load-more" title="Mehr laden"><span class="fa fa-angle-down"></span></button>
    </div>
{% endblock %}