{% set HOST = constant("HOST") %}
{% set styles = (styles is defined ? styles : [])|merge(["frame", "font-awesome.min", "containers"]) %}
{% set scripts = (scripts is defined ? scripts : [])|merge(["lib/jquery-3.2.1.min", "onpage-link-scroll"]) %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Computer Steiner{{ title is defined ? " >> "~title }}</title>
    {% block head %}
    <style>
        {{ "@font-face{font-family: 'FontAwesome';src: url('" }}{{ HOST }}{{ "/fonts/fontawesome-webfont.eot?v=4.7.0');src: url('" }}{{ HOST }}{{ "/fonts/fontawesome-webfont.eot?#iefix&v=4.7.0') format('embedded-opentype'), url('" }}{{ HOST }}{{ "/fonts/fontawesome-webfont.woff2?v=4.7.0') format('woff2'), url('" }}{{ HOST }}{{ "/fonts/fontawesome-webfont.woff?v=4.7.0') format('woff'), url('" }}{{ HOST }}{{ "/fonts/fontawesome-webfont.ttf?v=4.7.0') format('truetype'), url('" }}{{ HOST }}{{ "/fonts/fontawesome-webfont.svg?v=4.7.0#fontawesomeregular') format('svg');font-weight: normal;font-style: normal;}" }}
    </style>
    <link href="https://fonts.googleapis.com/css?family=Heebo:100" rel="stylesheet">
    {% for style in styles %}
        <link rel="stylesheet" href="{{ HOST }}/styles/{{ style }}.css" />
    {% endfor %}
    {% for script in scripts %}
        <script src="{{ HOST }}/scripts/{{ script }}.js"></script>
    {% endfor %}
    {% endblock %}
</head>
<body>
    <header>
        <div id="header-wrapper">
            <div id="header-content">
                <nav>
                    <ul>
                        {% for item in
                        [
                            {"title": "Unternehmen", "dropdown": ["Ãœber Uns", "Kontakt"]},
                            {"title": "Produkte", "dropdown": ["CS-Transport", "CS-Bus", "CS-Routing"]},
                            {"title": "News", "dropdown": ["CS-Transport", "CS-Bus", "CS-Routing"]},
                            {"title": "Support", "dropdown": ["Teamviever", "Fastviewer"]},
                        ] %}
                            {% set dropdownLinks = [] %}
                            {% for dropdownItem in item["dropdown"] %}
                                {% set dropdownLinks = dropdownLinks|merge([dropdownItem|identifier(item["title"])]) %}
                            {% endfor %}
                            <li>
                                <a class="center-vertically" href="#{{ dropdownLinks|first }}">
                                    <span>{{ item["title"] }}</span>
                                </a>
                                <ul class="dropdown-items">
                                    <h4>{{ item["title"] }}</h4>
                                    {% for dropdownItem in item["dropdown"] %}
                                        <li><a href="#{{ dropdownLinks[loop.index0] }}" >{{ dropdownItem }}</a></li>
                                    {% endfor %}
                                </ul>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>
                 <div id="language-selector">
                      <span id="current-lang" class="center-vertically"><span class="fa fa-globe"></span>DE</span>
                </div>
                <div id="logo" class="center-vertically">
                    <a href="#top">
                        <img src="{{ HOST }}/images/cs-logo.png" alt="Logo" />
                    </a>
                </div>
            </div>
        </div>
    </header>
        <main>
            {% block content %}
            {% endblock %}
        </main>
        <footer>
            <div id="footer-content">
                <div id="footer-left">
                    <span>Computer Steiner GmbH &copy; 2017</span>
                    <a href="">Impressum</a>
                    <a href="">AGB</a>
                </div>
                <a id="footer-back-to-top" href="#top">Zum Seitenanfang</a>
            </div>
        </footer>
</body>
</html>
